# MongoDB Atlas Configuration
# Connection string for MongoDB Atlas cluster (required)
# Format: mongodb+srv://<username>:<password>@<cluster>.mongodb.net/?retryWrites=true&w=majority
MONGODB_URI=your_mongodb_connection_string_here

# Database name (optional, defaults to "video_search")
MONGODB_DATABASE=video_search

# AWS Configuration
# Region for Bedrock and Lambda (must be us-east-1 for Marengo)
AWS_REGION=us-east-1

# Lambda function name (optional, defaults to "video-embedding-pipeline")
LAMBDA_FUNCTION_NAME=video-embedding-pipeline

# S3 Bucket Configuration
# Default bucket for video storage
S3_BUCKET=tl-brice-media

# CloudFront domain for video delivery (optional)
CLOUDFRONT_DOMAIN=your-distribution.cloudfront.net

# Query Fusion Weights
# Modality weights for score-based fusion (should sum to 1.0)
# Adjust based on your query distribution and content type
WEIGHT_VISUAL=0.8
WEIGHT_AUDIO=0.1
WEIGHT_TRANSCRIPTION=0.1
